<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient"
    tools:context=".AddDispenserActivity">

    <EditText
        android:id="@+id/MD5TextBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="88dp"
        android:layout_marginLeft="88dp"
        android:layout_marginTop="204dp"
        android:backgroundTint="@color/white"
        android:digits="0123456789"
        android:ems="10"
        android:hint="@string/validation_code"
        android:inputType="numberDecimal"
        android:textColor="@color/white"
        android:textColorHint="@color/whitehint"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/AddDispenserButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="78dp"
        android:background="@android:color/transparent"
        android:onClick="fAddDispenserButton"
        android:text="@string/add"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/dispenserNameTextBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:backgroundTint="@color/white"
        android:ems="10"
        android:hint="@string/dispenser_name"
        android:inputType="textPersonName"
        android:textColor="@color/white"
        android:textColorHint="@color/whitehint"
        app:layout_constraintStart_toStartOf="@+id/MD5TextBox"
        app:layout_constraintTop_toBottomOf="@+id/MD5TextBox" />
</androidx.constraintlayout.widget.ConstraintLayout>